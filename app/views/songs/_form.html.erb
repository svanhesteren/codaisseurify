<%= form_for @song do |f| %>
  <%= render 'shared/validation_errors', object: f.object %>

  <%= f.hidden_field :artist_id, value: @artist.id %>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Song name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Duration</label>
    <%= f.time_select :duration, placeholder: "Song duration", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Album</label>
    <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Rating</label>
    <%= f.number_field :rating, placeholder: "Song rating", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
