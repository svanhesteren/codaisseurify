
<%= form_for @artist, html: { multipart: true } do |f| %>
  <%= render 'shared/validation_errors', object: f.object %>

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Artist name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Birthday</label>
    <%= f.date_select :birthday, placeholder: "Birthday", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Favourite food</label>
    <%= f.text_field :fav_food, placeholder: "Favourite food", class: "form-control" %>
  </div>

  <div class="form-group">
    <span class="btn btn-default">
      Upload Photos
      <%= file_field_tag "photo", type: :file, multiple: false %>
    </span>
  </div>
  <div id="photos">
    <%= render 'photos/list' %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>
